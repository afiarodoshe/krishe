<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity"
        tools:openDrawer="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/dashbg"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.AppBarLayout
                    android:id="@+id/toolbarwrap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:titleTextColor="@color/colorAccent"
                        android:gravity="left"
                        style="@style/AppTheme"
                        android:background="@drawable/whitebg">

                        <TextView
                            android:textColor="@color/darkblue"
                            android:id="@+id/appname"
                            android:textSize="28sp"
                            android:gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:padding="5dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/notifintro"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:lottie_fileName="ripple.json"
                                app:lottie_loop="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                app:lottie_autoPlay="true"

                                />

                            <ImageView
                                android:id="@+id/view_profile"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/profile"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                />

                            <ImageView
                                android:id="@+id/cart"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/cart"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                />
                            //android:onClick="viewCart"

                        </LinearLayout>

                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.AppBarLayout>

                <ScrollView
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbarwrap">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:orientation="vertical"

                            >

                            <SearchView
                                android:id="@+id/mainsearch"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@color/lightGrey"/>
                            <android.support.v7.widget.CardView
                                android:id="@+id/SellorRent"
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:layout_margin="10dp"
                                android:background="@color/lightGrey"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    >

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/sellorrent" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Sell or lease your machinery"

                                        android:textColor="@color/graend"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <GridLayout
                            android:id="@+id/mainGrid"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="8"
                            android:alignmentMode="alignMargins"
                            android:columnCount="2"
                            android:columnOrderPreserved="false"
                            android:padding="14dp"
                            android:rowCount="4">



                            <android.support.v7.widget.CardView
                                android:id="@+id/RentSearch"
                                android:layout_width="160dp"
                                android:layout_height="190dp"
                                android:layout_margin="10dp"
                                android:background="@color/lightGrey"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    >

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/rent" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Rent Farm Machinery"

                                        android:textColor="@color/graend"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/fruitsearch"
                                android:layout_width="160dp"
                                android:layout_height="190dp"
                                android:layout_margin="10dp"
                                android:background="@color/lightGrey"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/apple" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Fruits"
                                        android:textColor="@color/graend"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/fertilizersearch"
                                android:layout_width="160dp"
                                android:layout_height="190dp"
                                android:layout_margin="10dp"
                                android:background="@color/lightGrey"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/fertilizer" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Fertilizer"

                                        android:textColor="@color/graend"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/seedsearch"
                                android:layout_width="160dp"
                                android:layout_height="190dp"
                                android:layout_margin="10dp"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/lightGrey"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/seed" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Seed"

                                        android:textColor="@color/graend"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/vegetablesearch"
                                android:layout_width="160dp"
                                android:layout_height="190dp"
                                android:layout_margin="10dp"
                                android:background="@color/lightGrey"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/vegetable" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Vegetable"

                                        android:textColor="@color/graend"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/spicesearch"
                                android:layout_width="160dp"
                                android:layout_height="190dp"
                                android:layout_margin="10dp"
                                android:background="@color/lightGrey"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/spice" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Spice"

                                        android:textColor="@color/graend"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/cropsearch"
                                android:background="@color/lightGrey"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:layout_width="160dp"
                                android:layout_height="190dp"
                                android:layout_margin="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:background="@drawable/circleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/crop" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/grad_bg" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:textSize="15dp"
                                        android:text="Crops"
                                        android:textColor="@color/graend" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>



                        </GridLayout>
                    </LinearLayout>
                </ScrollView>>
            </LinearLayout>

        </RelativeLayout>
        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/drawer_menu" />

    </android.support.v4.widget.DrawerLayout>